<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard | bookMyexpert</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/userDash.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo-container">
                    <img src="/img/logo2.jpg" alt="bookMyexpert logo">
                    <h2>bookMyexpert</h2>   
                </div>
                <button class="toggle-btn" id="toggle-sidebar">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <nav class="sidebar-nav">
                <a href="/users/home" class="nav-link active">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Home</span>
                </a>
                <a href="/users/appointments" class="nav-link">
                    <i class="bi bi-calendar-check"></i>
                    <span>Appointments</span>
                </a>
                <a href="/users/messages" class="nav-link">
                    <i class="bi bi-chat-left-dots-fill"></i>
                    <span>Messages</span>
                    <span class="badge">26</span>
                </a>
                <a href="/users/bookmarks" class="nav-link">
                    <i class="bi bi-bookmarks-fill"></i>
                    <span>Bookmarks</span>
                </a>
                <a href="/users/settings" class="nav-link">
                    <i class="bi bi-gear-fill"></i>
                    <span>Settings</span>
                </a>
                <a href="/logout" class="nav-link">
                    <i class="bi bi-box-arrow-right"></i> 
                    <span>Logout</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Bar -->
            <header class="top-bar">
                <div class="search-container">
                    <form action="/users/home" method="GET" class="search-form">
                        <div class="search-box">
                            <input 
                                type="search" 
                                name="q" 
                                placeholder="Search for services..." 
                                value="<%= filters?.searchQuery || '' %>"
                                aria-label="Search services"
                            >
                            <button type="submit" aria-label="Submit search">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Optional Notifications -->
                <div class="notifications">
                    <i class="bi bi-bell notifications-icon"></i>
                    <span class="notifications-badge">3</span>
            </div>
            
                <div class="user-profile">
                    <div class="user-info">
                        <p>Welcome, <%= user.first_name %></p>
                        <span class="user-role">Client</span>
                    </div>
                    <div class="profile-image">
                        <img 
                            src="<%= user.profile_image || '/img/profile.jpg' %>" 
                            alt="Profile picture"
                            loading="lazy"
                            onerror="this.src='/img/profile.jpg'"
                        >
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <div class="content-wrapper">
                <!-- Filters Sidebar -->
                <aside class="filters-sidebar">
                    <div class="filters-header">
                        <h3>Filters</h3>
                        <button type="button" class="clear-filters">
                            <i class="bi bi-x-circle"></i>
                            Clear All
                        </button>
                    </div>

                    <form id="filters-form" class="filters-form">
                        <div class="filter-section">
                            <div class="filter-section-header">
                                <h4>Industry</h4>
                                <span class="selected-count"></span>
                            </div>
                            <div class="filter-options">
                                <% filters.industries.forEach(industry => { %>
                                    <label class="checkbox-label">
                                        <input type="checkbox" 
                                               name="industry" 
                                               value="<%= industry.industry %>"
                                               <%= filters.currentIndustry.includes(industry.industry) ? 'checked' : '' %>>
                                        <span class="checkbox-custom"></span>
                                        <span class="label-text"><%= industry.industry %></span>
                                        <!-- Optional: Add count of businesses in each industry -->
                                        <span class="count">(<%= industry.count || 0 %>)</span>
                                    </label>
                                <% }); %>
                    </div>
                </div>

                        <div class="filter-section">
                            <div class="filter-section-header">
                                <h4>Region</h4>
                            </div>
                            <div class="filter-options">
                                <select name="region_id" id="region-filter" class="form-select">
                                    <option value="">All Regions</option>
                                    <% filters.regions.forEach(region => { %>
                                        <option value="<%= region.id %>" 
                                                <%= filters.currentRegion == region.id ? 'selected' : '' %>>
                                            <%= region.name %> (<%= region.business_count || 0 %>)
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        
                        <div class="filter-section">
                            <div class="filter-section-header">
                                <h4>Sub-Region</h4>
                            </div>
                            <div class="filter-options">
                                <select name="sub_region_id" id="sub-region-filter" class="form-select">
                                    <option value="">All Sub-Regions</option>
                                    <% filters.subRegions.forEach(subRegion => { %>
                                        <option value="<%= subRegion.id %>" 
                                                data-region="<%= subRegion.region_id %>"
                                                <%= filters.currentSubRegion == subRegion.id ? 'selected' : '' %>
                                                class="sub-region-option <%= filters.currentRegion && 
                                                                           subRegion.region_id != filters.currentRegion ? 
                                                                           'd-none' : '' %>">
                                            <%= subRegion.name %> (<%= subRegion.business_count || 0 %>)
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>

                        <div class="filter-section">
                            <h4>Price Range</h4>
                            <div class="price-range">
                                <input type="range" min="0" max="10000" step="100" class="price-slider">
                                <div class="price-inputs">
                                    <input type="number" class="min-price" placeholder="Min">
                                    <input type="number" class="max-price" placeholder="Max">
                                </div>
                            </div>
                        </div>

                        <div class="filter-section">
                            <h4>Rating</h4>
                            <div class="rating-options">
                                <label class="radio-label">
                                    <input type="radio" name="rating" value="4">
                                    4+ Stars
                                </label>
                                <label class="radio-label">
                                    <input type="radio" name="rating" value="3">
                                    3+ Stars
                                </label>
                            </div>
                        </div>
                    </form>
                </aside>

                <!-- Business Cards Grid -->
                <div class="business-grid">
                    <% businesses.forEach(business => { %>
                        <div class="business-card">
                            <div class="card-header">
                                <img src="<%= business.background_image || '/img/default-business.jpg' %>" 
                                     alt="<%= business.name %>" class="business-image">
                                <button class="bookmark-btn" data-id="<%= business.id %>">
                                    <i class="bi bi-bookmark<%= business.bookmarked ? '-fill' : '' %>"></i>
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="business-logo">
                                    <img src="<%= business.logo || '/img/default-logo.jpg' %>" alt="Logo">
                                </div>
                                <h3 class="business-name"><%= business.name %></h3>
                                <p class="business-industry"><%= business.industry %></p>
                                <div class="business-rating">
                                    <div class="stars">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <i class="bi bi-star<%= i <= business.rating ? '-fill' : 
                                                (i - 0.5 <= business.rating ? '-half' : '') %>"></i>
                                        <% } %>
                                    </div>
                                    <span>(<%= business.review_count %>)</span>
                                </div>
                                <p class="business-location">
                                    <i class="bi bi-geo-alt"></i>
                                    <%= business.location %>
                                    <% if (business.region_name) { %>
                                        - <%= business.region_name %>
                                        <% if (business.sub_region_name) { %>
                                            / <%= business.sub_region_name %>
                                        <% } %>
                                    <% } %>
                                </p>
                                <a href="/business/<%= business.id %>" class="view-profile-btn">
                                    View Profile
                                </a>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </main>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
    // Sidebar Toggle
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggle-sidebar');
    
    toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
        document.querySelector('.main-content').classList.toggle('expanded');
    });

    // Bookmark functionality
    document.querySelectorAll('.bookmark-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
            const businessId = btn.dataset.id;
            try {
                const response = await fetch('/api/toggle-bookmark', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ businessId })
                });
                
                if (response.ok) {
                    const icon = btn.querySelector('i');
                    icon.classList.toggle('bi-bookmark');
                    icon.classList.toggle('bi-bookmark-fill');
                }
            } catch (error) {
                console.error('Error toggling bookmark:', error);
            }
        });
    });

    // Filter functionality
    const filterInputs = document.querySelectorAll('.filters-sidebar input, .filters-sidebar select');
    filterInputs.forEach(input => {
        input.addEventListener('change', () => {
            applyFilters();
        });
    });
    
    // Region and sub-region filtering
    const regionFilter = document.getElementById('region-filter');
    const subRegionFilter = document.getElementById('sub-region-filter');
    
    if (regionFilter && subRegionFilter) {
        regionFilter.addEventListener('change', function() {
            const selectedRegionId = this.value;
            
            // Reset sub-region selection
            subRegionFilter.value = '';
            
            // Show/hide sub-regions based on selected region
            document.querySelectorAll('.sub-region-option').forEach(option => {
                if (!selectedRegionId || option.dataset.region === selectedRegionId) {
                    option.classList.remove('d-none');
                } else {
                    option.classList.add('d-none');
                }
            });
            
            // Apply filters is called by the change event listener above
        });
    }
    
    // Clear all filters button
    const clearFiltersBtn = document.querySelector('.clear-filters');
    if (clearFiltersBtn) {
        clearFiltersBtn.addEventListener('click', () => {
            // Reset all inputs
            document.querySelectorAll('.filters-sidebar input[type="checkbox"], .filters-sidebar input[type="radio"]').forEach(input => {
                input.checked = false;
            });
            
            document.querySelectorAll('.filters-sidebar select').forEach(select => {
                select.value = '';
            });
            
            // Submit the form to clear filters
            applyFilters();
        });
    }

    function applyFilters() {
        document.getElementById('filters-form').submit();
    }
});
    </script>
</body>
</html>