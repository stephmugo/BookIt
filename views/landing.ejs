<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>bookMyexpert - Your Next Appointment, Just a Click Away!</title>
    <link rel="stylesheet" href="/styles/landing.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <!-- Hero Section -->
    <header class="hero">
        <nav class="nav-container">
            <div class="logo">
                <img src="/img/logo2.jpg" alt="bookMyexpert logo">
                <h1>bookMyexpert</h1>
            </div>
            <div class="nav-links">
                <a href="/business/register" class="btn btn-outline">For Businesses</a>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle">
                        Sign In
                        <i class="bi bi-chevron-down"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a href="/users/login" class="dropdown-item">
                            <i class="bi bi-person"></i>
                            Sign In as Client
                        </a>
                        <a href="/business/login" class="dropdown-item">
                            <i class="bi bi-building"></i>
                            Sign In as Business
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="hero-content">
            <div class="hero-text">
                <h1>Your Next Appointment, Just a Click Away!</h1>
                <p>Connect with top-rated professionals and book services instantly. No more waiting in line!</p>
                <br>
                <div class="dropdown">
                    <button class="btn btn-cta dropdown-toggle">
                        Get Started
                        <i class="bi bi-chevron-down"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a href="/users/register" class="dropdown-item">
                            <i class="bi bi-person-plus"></i>
                            Register as Client
                        </a>
                        <a href="/business/register" class="dropdown-item">
                            <i class="bi bi-building-add"></i>
                            Register as Business
                        </a>
                    </div>
                </div>
            </div>
            <div class="hero-image">
                <img src="/img/just3.jpg" alt="Professional services illustration">
            </div>
        </div>
    </header>

    <!-- Features Section -->
    <section class="features">
        <h2>Why Choose Us?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <i class="bi bi-calendar-check"></i>
                <h3>Effortless Booking</h3>
                <p>Schedule appointments instantly with your preferred service providers.</p>
            </div>
            <div class="feature-card">
                <i class="bi bi-star"></i>
                <h3>Top-Rated Professionals</h3>
                <p>Choose from verified experts with proven track records.</p>
            </div>
            <div class="feature-card">
                <i class="bi bi-wallet2"></i>
                <h3>Price Flexibility</h3>
                <p>Find services that match your budget and requirements.</p>
            </div>
            <div class="feature-card">
                <i class="bi bi-geo-alt"></i>
                <h3>Wider Reach</h3>
                <p>Connect with professionals across different regions.</p>
            </div>
        </div>
    </section>

    <!-- For Professionals Section -->
    <section class="for-professionals">
        <div class="section-content">
            <h2>Where Talent Meets Opportunity</h2>
            <div class="benefits-grid">
                <div class="benefit-card">
                    <i class="bi bi-briefcase"></i>
                    <h3>Flexible Work Model</h3>
                    <p>Choose between freelance or store-based operations.</p>
                </div>
                <div class="benefit-card">
                    <i class="bi bi-award"></i>
                    <h3>Brand Ambassador</h3>
                    <p>Earn special status with consistent 4+ star reviews.</p>
                </div>
                <div class="benefit-card">
                    <i class="bi bi-building"></i>
                    <h3>Access Equipment</h3>
                    <p>Use fully-equipped spaces for your services.</p>
                </div>
                <div class="benefit-card">
                    <i class="bi bi-shield-check"></i>
                    <h3>Live Vetting</h3>
                    <p>Showcase your skills through our verification process.</p>
                </div>
            </div>
            <a href="/business/register" class="btn btn-secondary">Join as a Professional</a>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works">
        <h2>How It Works</h2>
        <div class="steps-container">
            <div class="step">
                <div class="step-number">1</div>
                <h3>Search</h3>
                <p>Find the perfect service provider near you</p>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <h3>Book</h3>
                <p>Schedule your appointment with a few clicks</p>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <h3>Enjoy</h3>
                <p>Receive professional service at your convenience</p>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="cta-content">
            <h2>Ready to Get Started?</h2>
            <p>Join thousands of satisfied customers and service providers.</p>
            <div class="cta-buttons">
                <a href="/users/register" class="btn btn-cta">Sign Up as Client</a>
                <a href="/business/register" class="btn btn-outline">Register Business</a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>bookMyexpert</h3>
                <p>Connecting quality service providers with clients seamlessly.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <a href="/about">About Us</a>
                <a href="/contact">Contact</a>
                <a href="/privacy">Privacy Policy</a>
                <a href="/terms">Terms of Service</a>
            </div>
            <div class="footer-section">
                <h3>Contact Us</h3>
                <p>Email: support@bookmyexpert.com</p>
                <p>Phone: (254) 123-4567</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 bookMyexpert. All rights reserved.</p>
        </div>
    </footer>
    <script src="/js/landing.js"></script>
